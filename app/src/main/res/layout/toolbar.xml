<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/toolbar_back"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <View
            android:layout_width="@dimen/toolbar_icon_width"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="invisible"/>

    <com.lory.library.ui.ui.view.AppCompatFontTextView
            android:id="@+id/toolbar_textView_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:gravity="center"
            android:paddingLeft="@dimen/toolbar_title_text_padding"
            android:paddingRight="@dimen/toolbar_title_text_padding"
            android:textColor="@color/toolbar_text_color_primary"
            android:textSize="@dimen/toolbar_title_text_size"/>

    <ImageView
            android:id="@+id/toolbar_imageView_imageView_ok"
            android:layout_width="@dimen/toolbar_icon_width"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"/>

</LinearLayout>