<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:id="@+id/activity_gallery_toolbar"
            style="@style/toolbar_dimen"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:padding="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"/>

    <com.lory.library.ui.ui.view.FontTextView
            android:id="@+id/activity_gallery_textiew_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/toolbar_back"
            android:text="@string/gallery"
            android:textColor="@color/text_color_secondary"
            android:textSize="@dimen/gallery_message_text_size"
            android:padding="@dimen/gallery_message_text_padding"
            android:textStyle="bold|italic"/>

    <FrameLayout
            android:id="@+id/activity_gallery_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>