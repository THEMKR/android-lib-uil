<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/item_pic_cardView"
            android:layout_centerInParent="true"
            style="@style/style_card_view_property_no"
            android:layout_width="@dimen/item_pic_size"
            android:layout_height="@dimen/item_pic_size">

        <com.lory.library.uil.ui.custom.MKRImageView
                android:id="@+id/item_pic_imageView"
                style="@style/thumbnail_pic"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>