<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_album_cardView"
        style="@style/style_card_view_property_s"
        android:layout_margin="@dimen/item_album_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_album_size">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.lory.library.uil.ui.custom.MKRImageDataView
                android:id="@+id/item_album_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <com.lory.library.ui.ui.view.FontTextView
                android:id="@+id/item_album_textView_albumName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/album_name_back"
                android:padding="@dimen/item_album_margin"
                android:textSize="@dimen/album_name_text_size"
                android:textColor="@color/text_color_secondary"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>