<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- APPLICATIONS THEMES START -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimary" tools:ignore="DuplicateDefinition,NewApi">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/toolbar_text_color_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color_secondary</item>
    </style>

    <!-- TOOLBAR STYLE -->
    <style name="toolbar_dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar_back</item>
    </style>

    <!-- CardView Property Start -->
    <style name="style_card_view_property_no">
        <item name="contentPaddingBottom">@dimen/card_padding_no</item>
        <item name="contentPaddingLeft">@dimen/card_padding_no</item>
        <item name="contentPaddingRight">@dimen/card_padding_no</item>
        <item name="contentPaddingTop">@dimen/card_padding_no</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/card_elevation_no</item>
        <item name="elevation">@dimen/card_elevation_no</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="style_card_view_property_s" parent="style_card_view_property_no">
        <item name="contentPaddingBottom">@dimen/card_padding_s</item>
        <item name="contentPaddingLeft">@dimen/card_padding_s</item>
        <item name="contentPaddingRight">@dimen/card_padding_s</item>
        <item name="contentPaddingTop">@dimen/card_padding_s</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/card_elevation_s</item>
        <item name="elevation">@dimen/card_elevation_s</item>
    </style>
    <!-- CardView Property End -->

    <style name="thumbnail_album">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_thumbnail</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="thumbnail_pic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_thumbnail</item>
    </style>

</resources>
